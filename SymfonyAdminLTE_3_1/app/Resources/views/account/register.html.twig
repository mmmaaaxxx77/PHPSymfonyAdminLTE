{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/plugin/adminLTE/plugins/datatables/css/dataTables.bootstrap.css') }}">
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title"><i class="fa fa-fw fa-user"></i> 新增使用者</h3>

          <div class="box-tools pull-right">
          </div>
          <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          {{ form_start(form) }}
          <div class="form-group has-feedback">
            <label>USERNAME</label>
            {{ form_widget(form.username, { 'attr': {'class':'form-control', 'placeholder':'username'}}) }}
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
          </div>
          {{ form_errors(form.username) }}
          <div class="form-group has-feedback">
            <label>EMAIL</label>
            {{ form_widget(form.email, { 'attr': {'class':'form-control', 'placeholder':'Email'}}) }}
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>
          {{ form_errors(form.email) }}
          <div class="form-group has-feedback">
            <label>PASSWORD</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class':'form-control', 'placeholder':'Password'}}) }}
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <label>REPEAT PASSWORD</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class':'form-control', 'placeholder':'Repeat Password'}}) }}
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          {{ form_errors(form.plainPassword.first) }}
          <div class="row">
            <!-- /.col -->
            <div class="col-xs-12">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
            </div>
            <!-- /.col -->
          </div>
          {{ form_errors(form) }}
          {{ form_end(form) }}
        </div>
        <!-- /.box-body -->
        <div class="box-footer no-padding">

        </div>
      </div>
    </div>
  </div>

  {% include 'account/userUrls.html.twig' %}


{% endblock %}

{% block javascripts %}
  <script src="{{ asset('bundles/javascript/account/userRegister.js')}}"></script>
{% endblock %}